  a {
    text-decoration: none;
    color: white;
  }

  button {
    padding: 1rem;
    background-color: #276749;
    border: none;
    color: white;
    margin-top: 1rem;
  }

  h1 {
    margin: 0;
    font-family: sans-serif;
    color: #2d3748;
  }

  h2 {
    margin: 0;
    font-family: sans-serif;
    color: #2d3748;
  }

  li {
    font-family: sans-serif;
    color: #4a5568;
  }

  p {
    font-family: sans-serif;
    color: #4a5568;
  }

  .button_container {
    display: flex;
    justify-content: center;
  }

  .footer_container {
    margin-top: 2rem;
    margin-bottom: 2rem;
    display: flex;
    justify-content: center;
    text-align: center;
  }

  .logo_section {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    margin-bottom: 2rem;
  }

  .logo_text {
    font-family: serif;
    color: #1c4532;
  }

  .new_candidates {
    background-color: #c6f6d5;
  } 

